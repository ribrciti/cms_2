<% @page_title = "Admin Users list" %>
<%= link_to("Back to Admin Users", {controller: 'access', :action => 'index'}, :class => 'back-link') %>

<div class="user index">
  <h2>Admin Users</h2>
<%= link_to(image_tag('plus.jpg', :size => '9x9', :alt => '+') +" Add New Admin User", {:action => 'new'}, :class => 'action new' ) %> 
  <div><%# pluralize(@admin_users.size, 'admin_user') %> found</div>
  <table class="listing" summary="Admin users list">
    <tr>
      <th>Administrator's Name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
    <tr class="<%= cycle 'odd', 'even' %>">
     	<td><%= admin_user.name %></td> <%# .name comes from the model, it is combo of first_ and last_name %>
      <td><%= admin_user.username %></td>
     	<td><%= mail_to(admin_user.email) %></td>
      
      <td class="actions">        
        <%= link_to("Edit", {:action => 'edit', :id => admin_user.id }, 
          :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => admin_user.id }, 
          :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

