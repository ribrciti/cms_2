<%= link_to "Back to Subjects List", root_path %>

<div class="sections delete">
  <h2>Delete Section</h2>
 
	<%= form_for(:section, :url => { :action => 'destroy', 
  		:page_id => @page.id, :subject_id => @subject.id }) do |f| %>

