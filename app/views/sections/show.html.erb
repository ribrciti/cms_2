<% @page_title = "Sections | Show" %>
<%= link_to("Back to Sections", {:action => 'index'}, :class => 'back-link') %>
<div class="sections show">
  <h2>Show Section</h2>
  <table summary="Section detail view">
    <tr>
      <th>Page ID</th>
      <td><%= @section.page_id %></td>
    </tr>
    <tr>
    <tr>
      <th>Name</th>
      <td><%= @section.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @section.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @section.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Content Type</th>
      <td><%= @section.content_type %></td>
    </tr>
    <tr>
    <tr>
      <th>Content</th>
      <td><%= @section.content %></td>
    </tr>
  </table>
</div>

