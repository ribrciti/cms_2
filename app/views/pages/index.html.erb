<%= link_to("Back To Subjects", root_path) %> 
<%= link_to("Add New Page", {:action => 'new', :subject_id => @subject.id}, :class => 'action new' ) %> 
<% @page_title = "Pages-List" %>
<div class="pages index">
  <h2>Pages List</h2>
  <table class="listing" summary="Page list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Subject</th>
      <th>Page</th>
      <th>Permalink</th>
      <th>Visible</th>
      <th>Sections</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
    <tr class="<%= cycle 'odd', 'even' %>">
      <td><%= page.position %></td>
      <td><%= page.subject.name if page.subject %></td>
      <td><%= page.name %></td>
      <td><%= page.permalink %></td>
       <td class="center"><%= status_tag(page.visible) %></td>        
      <td class="center"><%= page.sections.size %></td>
      <td class="actions">
        <%= link_to("View Sections", {:controller => 'sections', :action => 'index', :page_id => page.id },  :class => 'action show') %>
        <%= link_to("Show", {:action => 'show', :id => page.id, :subject_id => @subject.id },
          :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => page.id, :subject_id => @subject.id }, 
          :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => page.id, :subject_id => @subject.id }, 
          :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>